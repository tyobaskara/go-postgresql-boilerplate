# Application Environment (dev, sit, uat, production)
ENVIRONMENT=dev

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=localhost
SERVER_TIMEOUT=30s

# Database Configuration
# Note: 
# - If running locally (without Docker): use DB_HOST=localhost
# - If running with Docker: use DB_HOST=postgres (service name in docker-compose)
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=jeki
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=25
DB_CONN_MAX_LIFETIME=5m

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=168h

# Redis Configuration (if needed)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Logging Configuration
LOG_LEVEL=debug # debug, info, warn, error
LOG_FORMAT=json # json, text
LOG_OUTPUT=stdout # stdout, file

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=1m

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization
CORS_MAX_AGE=12h

# Email Configuration (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=your_email@gmail.com

# AWS Configuration (if needed)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET=your_bucket_name

# Monitoring Configuration (if needed)
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_METRICS=false
ENABLE_CACHE=false